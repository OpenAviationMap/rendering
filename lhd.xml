<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Map>
<Map bgcolor="rgba(255,255,255,128)"
     srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">

    <Style name="OpenAviationMap">
        <Rule>
            <Filter>[aviation_area] = 'danger'</Filter>
            <LinePatternSymbolizer width="20" height="20" type="png"
                                   file="danger_area_edge.png"
                                   />
            <TextSymbolizer name="name"
                            face_name="DejaVu Sans Book"
                            size="10"
                            text_convert="toupper"
                            vertical_alignment="bottom"
                            fill="#ff0000"/>
        </Rule>
    </Style>


    <Layer name="lhd" status="on" srs="+proj=latlong +datum=WGS84">
        <StyleName>OpenAviationMap</StyleName>
        <Datasource>
            <Parameter name="type">osm</Parameter>
            <Parameter name="file">lhd.osm</Parameter>
        </Datasource>
    </Layer>

</Map>

